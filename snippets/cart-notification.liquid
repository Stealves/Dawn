{% comment %}
    Renders cart notification

    Accepts:
    - color_scheme: {String} sets the color scheme of the notification (optional)

    Usage:
    {% render 'cart-notification' %}
{% endcomment %}

<cart-notification>
  <div>
    <div id="cart-notification" aria-modal="true" aria-label="{{ 'general.cart.item_added' | t }}" role="dialog" tabindex="-1">
      <div>
        <h2>{%- render 'icon-checkmark' -%} {{ 'general.cart.item_added' | t }}</h2>
        <button type="button" aria-label="{{ 'accessibility.close' | t }}">
          <svg aria-hidden="true" focusable="false"><use href="#icon-close"></svg>
        </button>
      </div>
      <div id="cart-notification-product"></div>
      <div>
        <a href="{{ routes.cart_url }}" id="cart-notification-button"></a>
        <form action="{{ routes.cart_url }}" method="post" id="cart-notification-form">
          <button name="checkout">{{ 'sections.cart.checkout' | t }}</button>
        </form>
        <button type="button">{{ 'general.continue_shopping' | t }}</button>
      </div>
    </div>
  </div>
</cart-notification>
{% style %}
  .cart-notification {
     display: none;
  }
{% endstyle %}
